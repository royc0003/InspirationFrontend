
@import url('https://fonts.googleapis.com/css2?family=Shadows+Into+Light&display=swap');
/*
  Font Variables
*/
shadow-light-font='Shadows Into Light'

/*
  Variables
*/
red = #fb475e
blue-green = #019992
yellow-orange = #FFB001
blue = #125688
offwhite = #fafafa
lightgrey  = #EDEEED
lightgray = lightgrey // OH Canada!

html
  font-size 10px
  font-family sans-serif

p
  font-size 1.6rem
  line-height 1.5

h1
  font-family 'Shadows Into Light'
  text-align center
  font-weight 100
  font-size 13rem
  margin 2rem 0
  letter-spacing -1px
  text-shadow 0px 4px 0 rgba(18, 86, 136, 0.11)
  a
    color blue
    text-decoration none
    &:focus
      outline 0



